doctype
html
  head
    title #{title} - My Site
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/table.css')
    link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")
    script( src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' )
    script( src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js' )
  body
    header
      nav.navbar.navbar-default( role="navigation" )
        .navbar-header
            button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#navbar-inverse", aria-expanded="false", aria-controls="navbar")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href="/") Journal
    
        #navbar-inverse.collapse.navbar-collapse
            ul.nav.navbar-nav 
                li.active: a( href="/") Home
                li: a( href="/resources" ) Resources
                li: a( href="/resources/create" ) Create resource
                li.dropdown
                    a.dropdown-toggle( href="#", data-toggle="dropdown", role="button", aria-expanded="false" ) More 
                        span.caret
                    ul.dropdown-menu( role="menu" )
                        li: a( href="/languages" ) Manage languages
                        li: a( href="/frameworks" ) Manage frameworks
                        li.divider
                        li.dropdown-header Account
                        li: a( href="#" ) Reset password
                        li: a( href="#" ) Logout
    .container
      .main-content
        block content
      .sidebar
        block sidebar
    footer
