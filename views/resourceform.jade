extend layout
block content
    h1 Create a resource
    form(name="create-resource", method="post")
     .form-group
        div.input.form-group
            label Resource Name
            input(class="form-control" type="text", name="name")
            
        div.input.form-group
            label Link
            input(class="form-control" type="text", name="url")
        div.form-group    
        label Language
        select(class="form-control" id="languagedropdown", name="languagename")
            option(value="null") None
            -for (var i = 0; i < languages.length; i++) {
            option(value="#{languages[i].name}") #{languages[i].name}
            -}
        div.form-group
        label Framework
        select(class="form-control" id="frameworkdropdown", name="frameworkname")
            option(value="null") None
            -for (var i = 0; i < frameworks.length; i++) {
            option(value="#{frameworks[i].name}") #{frameworks[i].name}
            -}
        div.actions
            input(class="btn btn-primary" type="submit", value="Create").form-group